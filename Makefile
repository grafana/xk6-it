# File generated by cdo from README.md; DO NOT EDIT.

SHELL=bash
.SHELLFLAGS=-e -o pipefail -c

.PHONY: __help__
__help__:
	@echo 'Usage: make [target]'
	@echo ''
	@echo 'Targets:'
	@echo '  all      Run all'
	@echo '  doc      Update documentation'
	@echo '  it       Run the integration tests'
	@echo '  lint     Run the linter'
	@echo '  makefile Generate the Makefile'
	@echo '  security Run security and vulnerability checks'
	@echo '  test     Test the test extensions'

# Run all
.PHONY: all
all: lint security test it doc makefile

# Update documentation
.PHONY: doc
doc: 
	@(\
		mdcode update;\
	)

# Run the integration tests
.PHONY: it
it: 
	@(\
		bats test;\
	)

# Run the linter
.PHONY: lint
lint: 
	@(\
		golangci-lint run ./...;\
	)

# Generate the Makefile
.PHONY: makefile
makefile: 
	@(\
		cdo --makefile Makefile;\
	)

# Run security and vulnerability checks
.PHONY: security
security: 
	@(\
		gosec -quiet ./...;\
		govulncheck ./...;\
	)

# Test the test extensions
.PHONY: test
test: 
	@(\
		bats -r ext;\
	)

